<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <MessagePopover
        id="messagePopover"
        items="{message>/}"
    >
        <MessageItem
            type="{message>type}"
            title="{message>message}"
            subtitle="{message>additionalText}"
        />
    </MessagePopover>
</core:FragmentDefinition>
